    <queries>
        <item for="install" editions="MULTIVENDOR,ULTIMATE">
            REPLACE INTO ?:privileges (privilege, is_default, section_id) VALUES ('manage_api_merlion', 'Y', 'addons');
        </item>
        <item for="install" editions="MULTIVENDOR,ULTIMATE">
            REPLACE INTO ?:privileges (privilege, is_default, section_id) VALUES ('manage_api_merlion_product', 'Y', 'addons');
        </item>        
        <item for="uninstall" editions="MULTIVENDOR,ULTIMATE">
            DELETE FROM ?:privileges WHERE privilege IN ('manage_api_merlion');
        </item>
        <item for="uninstall" editions="MULTIVENDOR,ULTIMATE">
            DELETE FROM ?:privileges WHERE privilege IN ('manage_api_merlion_product');
        </item>        
    </queries>
